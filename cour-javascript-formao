// cr√©er l'√©v√®nement save()

function save() {
    let tache = document.getElementById(`tache`).value;
    localStorage.setItem(`nameTask`, tache)
}


// cr√©er l'√©v√®nement remove()
function remove() {
    document.getElementById(`tache`).value = ``;
    localStorage.removeItem(`nameTask`)
}

